<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvBarberShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="50dp"

            android:text="Settings"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20sp"

            android:textStyle="bold"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etNewUsername"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:inputType="text"
            android:singleLine="true"
            android:background="@drawable/edittext_register"

            android:layout_marginTop="50dp"
            android:hint="NEW USERNAME"


            app:layout_constraintTop_toBottomOf="@id/tvBarberShop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:singleLine="true"
            android:background="@drawable/edittext_register"

            android:layout_marginTop="30dp"
            android:hint="NEW PASSWORD"

            app:layout_constraintTop_toBottomOf="@+id/etNewUsername"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etNewRePassword"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:singleLine="true"
            android:background="@drawable/edittext_register"

            android:layout_marginTop="30dp"
            android:hint="RE-ENTER NEW PASSWORD"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etNewPassword"
            />

        <EditText
            android:id="@+id/etNewEmail"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_register"

            android:layout_marginTop="30dp"

            android:singleLine="true"
            android:hint="NEW EMAIL"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etNewRePassword"
            tools:layout_editor_absoluteX="99dp" />

        <EditText
            android:id="@+id/etNewPhoneNumber"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:background="@drawable/edittext_register"

            android:layout_marginTop="30dp"
            android:hint="NEW PHONE NUMBER"

            android:singleLine="true"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etNewEmail" />

        <Button
            android:id="@+id/btnSubmitNew"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange"

            android:layout_marginTop="30dp"

            android:text="submit"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etNewPhoneNumber" />

        <Button
            android:id="@+id/btnLogOut"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_red_dark"

            android:layout_marginTop="30dp"

            android:text="Log out"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSubmitNew" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>